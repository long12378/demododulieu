<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="#E1E1E1">
    <RelativeLayout
        android:id="@+id/gridviewsp"
        android:layout_height="280dp"
        android:layout_width="180dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_item"
        >

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/hinhanh"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/phobien1"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="54dp"
            android:text="cà phê rang"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/giasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="16dp"
            android:text="30000 đ"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView

            android:layout_width="29dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/giasp"
            android:layout_alignRight="@+id/giasp"
            android:layout_alignBottom="@+id/giasp"
            android:layout_marginEnd="-80dp"
            android:layout_marginRight="-80dp"
            android:layout_marginBottom="-4dp"
            android:background="@drawable/ic_muahang" />
    </RelativeLayout>
</RelativeLayout>