<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dathang_mieuta_118"
            android:layout_alignParentStart="true"
            android:layout_marginStart="222dp"
            android:layout_marginBottom="-106dp"
            android:text="đ"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/dathang_sanpham_118"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/duongvien7"
            android:src="@drawable/phobien1"></ImageView>

        <TextView
            android:id="@+id/dathang_tensanpham_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/dathang_sanpham_118"
            android:text="Cà phê Lúa Mạch đá"
            android:textColor="#484848"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/dathang_gia_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dathang_tensanpham_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/dathang_sanpham_118"
            android:text="69.000 đ"
            android:textColor="#484848"
            android:textSize="22dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/dathang_imgyeuthich_118"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/dathang_gia_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/dathang_sanpham_118"
            android:src="@drawable/ic_yeuthich"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dathang_gia_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/dathang_imgyeuthich_118"
            android:text="Yêu thích"
            android:textColor="#484848"
            android:textSize="20dp"></TextView>

        <LinearLayout
            android:id="@+id/dathang_gioithieumon_118"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/dathang_sanpham_118"
            android:layout_marginTop="10dp"
            android:background="#F7F7F7"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Giới thiệu món"
                android:textColor="#484848"
                android:textSize="24dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/dathang_mieuta_118"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dathang_gioithieumon_118"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Đắm chìm vào hương vị cà phê mới mẻ khi kết hợp cùng lúa mạch thơm ngon. Không quá đắng lại ngọt dễ dịu dễ ghiền. Thưởng thức ngay nhé."
            android:textSize="20dp"></TextView>

        <ImageView
            android:id="@+id/giamsoluong_118"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/dathang_mieuta_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/giamsanpham"></ImageView>

        <TextView
            android:id="@+id/number_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dathang_mieuta_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/giamsoluong_118"
            android:text="1"
            android:textSize="26dp"></TextView>

        <ImageView
            android:id="@+id/tangsoluong_118"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/dathang_mieuta_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/number_118"
            android:src="@drawable/ic_themsanpham"></ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dathang_mieuta_118"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="-106dp"
            android:text="Tổng tiền:"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tongtien"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dathang_mieuta_118"
            android:layout_alignBottom="@+id/dathang_mieuta_118"
            android:layout_marginStart="119dp"
            android:layout_marginBottom="-106dp"
            android:text="1600000"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dathang_mieuta_118"
            android:layout_alignParentStart="true"
            android:layout_marginStart="222dp"
            android:layout_marginBottom="-106dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="đ" />

        <TextView
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="#000"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/dathang_tensanpham_118"
            android:layout_alignBottom="@+id/dathang_tensanpham_118"
            android:layout_marginStart="91dp"
            android:layout_marginBottom="-32dp"
            android:text="đ" />
    </RelativeLayout>
</RelativeLayout>